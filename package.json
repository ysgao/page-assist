{
  "name": "pageassist",
  "displayName": "Page Assist - A Web UI for Local AI Models",
  "version": "1.0.9",
  "description": "Use your locally running AI models to assist you in your web browsing.",
  "author": "n4ze3m",
  "scripts": {
    "dev": "cross-env TARGET=chrome wxt",
    "// dev:firefox": "cross-env TARGET=firefox wxt -b firefox",
    "dev:edge": "cross-env TARGET=chrome wxt -b edge",
    "build": "bun build:chrome; bun build:edge",
    "build:chrome": "cross-env TARGET=chrome wxt build && cp -r src/public/_locales build/chrome-mv3/",
    "// build:firefox": "cross-env TARGET=firefox wxt build -b firefox && cp -r src/public/_locales build/firefox-mv2/",
    "build:edge": "cross-env TARGET=chrome wxt build -b edge && cp -r src/public/_locales build/edge-mv3/",
    "zip": "cross-env TARGET=chrome wxt zip",
    "// zip:firefox": "cross-env TARGET=firefox wxt zip -b firefox",
    "compile": "tsc --noEmit",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "postinstall": "wxt prepare"
  },
  "dependencies": {
